section.page.edit-product
  div.prompt
  h4 Edit Product: 
    h4(data-hook="title")
  div.btn-group.btn-group-lg.btn-group-justified(role="group" aria-label="Justified button group") 
    div.btn-group(role="group")
        button.btn.btn-default.viewCodes View Codes
            span.label.label-primary.pull-left Alt + Q
    div.btn-group(role="group")
        button.btn.btn-default.addCodes Add Codes
            span.label.label-primary.pull-left Alt + W
    div.btn-group(role="group") 
        button.btn.btn-default.editProduct Product Page
            span.label.label-primary.pull-left Alt + E
  form(data-hook="add-product-form")
    fieldset(data-hook="field-container")
    .buttons
      button.btn(data-hook="reset", type="submit") Submit
